@{
    ViewData["Title"] = "Login";
}
<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }

    body {
        background: url("/assets/images/login/Atmoz-Flow-Minburi-2.jpg") no-repeat center center fixed;
        background-size: cover;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-card {
        background: rgba(0, 0, 0, 0.5); /* Optional: adds dark overlay for contrast */
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.3);
        color: #fff;
        max-width: 500px;
        width: 100%;
    }

        .login-card .form-control {
            background-color: rgba(255, 255, 255, 0.9);
            color: #000;
        }
</style>

<div class="login-card">
    <div class="login-main">
        <form class="theme-form">
            <div>
                <a class="logo" href="index.html">
                    <img class="img-fluid for-dark w-75" src="~/assets/images/logo/asw-logo-2.png" alt="loginpage">
                    <img class="img-fluid for-light w-75" src="~/assets/images/logo/asw-logo-2.png" alt="loginpage">
                </a>
            </div>
            <h4>Sign in to Customer service system</h4>
            <p>Enter your email & password to login</p>
            <div class="form-group">
                <label class="col-form-label">Email Address</label>
                <input class="form-control" type="email" required="" placeholder="Test@gmail.com">
            </div>
            <div class="form-group">
                <label class="col-form-label">Password </label>
                <div class="form-input position-relative">
                    <input class="form-control" type="password" name="login[password]" required="" placeholder="*********">
                    <div class="show-hide"> <span class="show"></span></div>
                </div>
            </div>
            <div class="form-group mb-0">
                <div class="checkbox p-0">
                    <input id="checkbox1" type="checkbox">
                    <label class="text-muted" for="checkbox1">Remember password</label>
                </div><a class="link" href="forget-password.html">Forgot password?</a>
                <div class="text-end mt-3">
                    @*    
                        <button class="btn btn-block w-100"
                                style="background-color: #123F6D; border-color: #0F355C; color: #ffffff;"
                                type="submit">
                            Sign in
                        </button> 
                     *@
                    <button class="btn btn-block w-100"
                            style="background-color: #123F6D; border-color: #0F355C; color: #ffffff;"
                            type="button"
                            onclick="window.location.href='/Main/index';">
                        Sign in
                    </button>
                </div>
            </div>
        </form>
    </div>

</div>
