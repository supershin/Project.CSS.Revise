@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
    var projectId = ViewBag.ProjectId as string ?? "";
    var projectName = ViewBag.ProjectName as string ?? "";
}

<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h4>Counter View</h4>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="index.html">
                            <svg class="stroke-icon">
                                <use xlink:href="@Url.Content("~/assets/svg/icon-sprite.svg#stroke-home")"></use>
                            </svg>
                        </a>
                    </li>
                    <li class="breadcrumb-item">Queue</li>
                    <li class="breadcrumb-item">Queue Bank</li>
                    <li class="breadcrumb-item active">Counter View</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid" id="Container_counter">
    <div class="card filter-card">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0" id="project_name">@projectName</h5>

            <input type="hidden" id="hidProjectId" value="@projectId" />

            <div class="d-flex align-items-center gap-2">
                <!-- FULL SCREEN BTN -->
                <button id="btnFullScreen"
                        class="btn btn-sm btn-outline-dark d-flex align-items-center gap-1">
                    <i class="fa fa-expand"></i>
                </button>

                <!-- COLLAPSE BTN -->
                <button class="btn btn-sm btn-outline-secondary d-flex align-items-center gap-1"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#fltCollapseProjectCounter"
                        aria-expanded="true">
                    <i class="fa fa-chevron-up"></i>
                </button>
            </div>
        </div>


        <div id="fltCollapseProjectCounter" class="collapse show">
            <div class="card-body">
                <!-- Project Counter UI -->
                <div class="row g-4 align-items-start">

                    <!-- LEFT: Counter Grid -->
                    <div class="col-lg-8" id="counterGridColumn">
                        <div class="d-flex align-items-center justify-content-start mb-3 gap-2">
                            <!-- Refresh -->
                            <button id="btnRefreshCounter" class="btn btn-success d-flex align-items-center gap-2">
                                <i class="fa fa-rotate-right"></i>
                                <span>Refresh</span>
                            </button>

                            <!-- Bank -->
                            <button id="btnBankCounter" class="btn btn-primary d-flex align-items-center gap-2">
                                <i class="fa fa-university"></i>
                                <span>Bank</span>
                            </button>

                            <!-- QR Code -->
                            <button id="btnQRCounter" class="btn btn-warning d-flex align-items-center gap-2">
                                <i class="fa fa-qrcode"></i>
                                <span>QR Code</span>
                            </button>
                        </div>


                        <div class="row g-3" id="counterGrid">
                            <!-- Active Counters -->
                            <div class="col-6 col-md-3">
                                <div class="counter-box active qb-counter"
                                     data-counter="1"
                                     data-bank="BBL"
                                     data-unit="26/1">
                                    <div class="counter-header bg-danger text-white">
                                        Counter : 1
                                    </div>
                                    <div class="counter-body">
                                        <img src="~/image/ThaiBankicon/BBL.png" alt="BBL" width="26" class="me-2">
                                        26/1
                                    </div>
                                </div>
                            </div>

                            <div class="col-6 col-md-3">
                                <div class="counter-box active qb-counter"
                                     data-counter="2"
                                     data-bank="KBT"
                                     data-unit="26/2">
                                    <div class="counter-header bg-danger text-white">
                                        Counter : 2
                                    </div>
                                    <div class="counter-body">
                                        <img src="~/image/ThaiBankicon/KBT.png" alt="KBank" width="26" class="me-2">
                                        26/2
                                    </div>
                                </div>
                            </div>

                            <div class="col-6 col-md-3">
                                <div class="counter-box active qb-counter"
                                     data-counter="3"
                                     data-bank="KBT"
                                     data-unit="26/5">
                                    <div class="counter-header bg-danger text-white">
                                        Counter : 3
                                    </div>
                                    <div class="counter-body">
                                        <img src="~/image/ThaiBankicon/KBT.png" alt="KBank" width="26" class="me-2">
                                        26/5
                                    </div>
                                </div>
                            </div>

                            <!-- Empty Counters -->
                            @for (int i = 4; i <= 12; i++)
                            {
                                <div class="col-6 col-md-3">
                                    <div class="counter-box empty qb-counter"
                                         data-counter="@i"
                                         data-bank=""
                                         data-unit="">
                                        <div class="counter-header bg-primary text-white">
                                            Counter : @i
                                        </div>
                                        <div class="counter-body"></div>
                                    </div>
                                </div>
                            }
                        </div>

                    </div>

                    <!-- RIGHT: Counter Detail -->
                    <div class="col-lg-4 d-none" id="counterDetailColumn">
                        <div class="counter-detail-box">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="fw-bold mb-0" id="counterDetailTitle">Counter : -</h5>
                                <button type="button" class="btn-close" id="btnCloseCounterDetail"></button>
                            </div>

                            <label for="txtUnitCode" class="form-label fw-semibold">Unit Code</label>
                            <div class="input-group mb-3">
                                <input id="txtUnitCode" type="text" class="form-control" placeholder="Unit Code">
                                <button class="btn btn-success">OK</button>
                            </div>

                            <div class="d-flex flex-wrap gap-2 mb-3" id="counterTagArea">
                                <span class="badge bg-info text-white p-2">
                                    26/5 <i class="fa fa-times ms-1"></i>
                                </span>
                                <span class="badge bg-light border text-dark p-2">
                                    <img src="~/image/ThaiBankicon/KKP.png" width="20" class="me-1"> KKP
                                    <i class="fa fa-times ms-1"></i>
                                </span>
                            </div>

                            <div class="qr-box text-center" id="counterQrBox">
                                <img src="~/image/ThaiBankicon/QRCODE.png" alt="QR" width="180">
                            </div>
                        </div>

                        <div class="text-end mt-3">
                            <button id="btnCheckerView" class="btn btn-warning d-flex align-items-center gap-2 ms-auto">
                                <i class="fa fa-desktop"></i> Checker View
                            </button>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="~/js/Pages/QueueBankCounterView/QueueBankCounterView.js?ver=@DateTime.Now.Ticks.ToString()"></script>
    <link rel="stylesheet" type="text/css" href="~/css/queuebankcounterview.css?ver=@DateTime.Now.Ticks.ToString()">
}