@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
    var projectId = ViewBag.ProjectId as string ?? "";
    var projectName = ViewBag.ProjectName as string ?? "";
}

<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h4>Counter View</h4>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="index.html">
                            <svg class="stroke-icon">
                                <use xlink:href="@Url.Content("~/assets/svg/icon-sprite.svg#stroke-home")"></use>
                            </svg>
                        </a>
                    </li>
                    <li class="breadcrumb-item">Queue</li>
                    <li class="breadcrumb-item">Queue Bank</li>
                    <li class="breadcrumb-item active">Counter View</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid" id="Container_counter">
    <!--  Counter card -->
    <div class="card filter-card">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0" id="project_name">@projectName</h5>

            <input type="hidden" id="hidProjectId" value="@projectId" />

            <div class="d-flex align-items-center gap-2">

                <!-- REFRESH BTN -->
                <button id="btnRefreshCounter" class="btn btn-sm btn-outline-success d-flex align-items-center gap-2">
                    <i class="fa fa-rotate-right"></i>
                </button>

                <!-- BANK BTN -->
                <button id="btnBankCounter" class="btn btn-sm btn-outline-primary d-flex align-items-center gap-2">
                    <i class="fa fa-university"></i>
                </button>

                <!-- QR CODE BTN -->
                <button id="btnQRCounter" class="btn btn-sm btn-outline-warning d-flex align-items-center gap-2">
                    <i class="fa fa-qrcode"></i>
                </button>

                <!-- FULL SCREEN BTN -->
                <button id="btnFullScreen"
                        class="btn btn-sm btn-outline-dark d-flex align-items-center gap-1">
                    <i class="fa fa-expand"></i>
                </button>

                <!-- COLLAPSE BTN -->
                <button class="btn btn-sm btn-outline-secondary d-flex align-items-center gap-1"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#fltCollapseProjectCounter"
                        aria-expanded="true">
                    <i class="fa fa-chevron-up"></i>
                </button>
            </div>
        </div>

        <div id="fltCollapseProjectCounter" class="collapse show">
            <div class="card-body">
                <!-- Project Counter UI -->
                <div class="row g-4 align-items-start">

                    <!-- LEFT: Counter Grid -->
                    <div class="col-lg-8" id="counterGridColumn">


                        <!-- 🔹 ตรงนี้ให้ JS เติมการ์ด -->
                        <div class="row g-3" id="counterGrid">
                            <div class="col-12 text-center text-muted" id="counterGridLoading">
                                Loading counters...
                            </div>
                        </div>
                    </div>

                    <!-- RIGHT: Counter Detail-->
                    <div class="col-lg-4 d-none" id="counterDetailColumn">
                        <div class="counter-detail-box">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="fw-bold mb-0" id="counterDetailTitle">Counter : -</h5>
                                <button type="button" class="btn-close" id="btnCloseCounterDetail"></button>
                            </div>

                            <label for="ddlUnitRegister" class="form-label fw-semibold">Unit Code</label>
                            <div class="input-group mb-3">
                                <select id="ddlUnitRegister" class="form-select">
                                    <option value="">-- Select unit --</option>
                                    @if (ViewBag.listunitforregister != null)
                                    {
                                        foreach (var u in ViewBag.listunitforregister)
                                        {
                                            <option value="@u.Value">@u.Text</option>
                                        }
                                    }
                                </select>
                                <button class="btn btn-success" id="btnSaveUnitRegister">OK</button>
                            </div>

                            <div class="d-flex flex-wrap gap-2 mb-3" id="counterTagArea">
                                <!-- จะถูกแทนที่ด้วย JS loadCounterDetail -->
                            </div>

                            <div class="qr-box text-center" id="counterQrBox">
                                <!-- จะถูกแทนที่ด้วย JS loadCounterDetail -->
                            </div>
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Pages/QueueBankCounterView/QueueBankCounterView.js?ver=@DateTime.Now.Ticks.ToString()"></script>
    <link rel="stylesheet" type="text/css" href="~/css/queuebankcounterview.css?ver=@DateTime.Now.Ticks.ToString()">

    <script src="~/js/jquery.signalR-2.4.2.js"></script>
    <script src="~/js/app-signalr.js?ver=@DateTime.Now.Ticks.ToString()"></script>
    <script type="text/javascript">
        var ChatServerUrl = "https://aswinno.assetwise.co.th/QCInspection/signalr/js";
        $(document).ready(function () {
            appSignalR.init();
        });
    </script>
}
