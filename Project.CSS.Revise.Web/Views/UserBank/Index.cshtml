    .dropdown-menu li {
        list-style: none;
    }

    .dropdown-menu .dropdown-item {
        display: flex;
        align-items: center;
        padding: 10px;
        text-decoration: none;
        color: #333;
        font-size: 1rem;
    }

    .dropdown-menu .dropdown-item:hover {
        background: #f8f9fa;
    }

    .bank-title {
        font-size: 1rem; /* Bank Code Bigger */
        font-weight: bold;
        color: #123F6D; /* Customize color */
        min-width: 50px;
    }

    .bank-detail {
        font-size: 0.8rem; /* Thai Bank Name Normal Size */
        color: #666;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const dropdownToggle = document.getElementById("bankDropdown");
        const dropdownTitle = document.getElementById("bankDropdownTitle");
        const dropdownMenu = document.getElementById("bankDropdownMenu");
        const dropdownItems = dropdownMenu.querySelectorAll(".dropdown-item");

        dropdownToggle.addEventListener("click", function () {
            dropdownMenu.style.display = dropdownMenu.style.display === "block" ? "none" : "block";
        });

        dropdownItems.forEach(item => {
            item.addEventListener("click", function () {
                const bankCode = item.getAttribute("data-code");
                const bankName = item.getAttribute("data-name");

                if (bankCode) {
                    dropdownTitle.innerHTML = `<span class="bank-title">${bankCode}</span> <span class="bank-detail">${bankName}</span>`;
                } else {
                    dropdownTitle.innerHTML = `${item.getAttribute("data-title")}`;
                }

                dropdownMenu.style.display = "none";
            });
        });

        document.addEventListener("click", function (event) {
            if (!dropdownToggle.contains(event.target) && !dropdownMenu.contains(event.target)) {
                dropdownMenu.style.display = "none";
            }
        });
    });
</script>