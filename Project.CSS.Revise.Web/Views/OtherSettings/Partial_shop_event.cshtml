@model List<Project.CSS.Revise.Web.Models.Master.EventsModel>  

<style>  
    #Projectcard .card-body {  
        min-height: 600px;  
    }  
</style>  

<!-- Calendar -->
<div class="col-12" id="Projectcard">
    <div class="card shadow-sm border-0">
        <div class="card-header border-start border-3 border-primary">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">

                <!-- 🔘 Add Event Button -->
                <button id="btn-add-event" type="button" class="btn btn-success rounded-pill px-4 d-flex align-items-center gap-2">
                    <i class="fa fa-plus"></i>
                    <span>Add Event</span>
                </button>

                <!-- Month Buttons: Include inline onclick -->
                <div class="d-flex flex-wrap justify-content-start gap-2">
                    <button class="btn btn-outline-primary position-relative rounded-pill px-3 month-btn" data-month="1" onclick="LoadPartialshopevent('1')">Jan</button>
                    <button class="btn btn-outline-primary position-relative rounded-pill px-3 month-btn" data-month="2" onclick="LoadPartialshopevent('2')">Feb</button>
                    <button class="btn btn-outline-primary position-relative rounded-pill px-3 month-btn" data-month="3" onclick="LoadPartialshopevent('3')">Mar</button>
                    <button class="btn btn-outline-primary position-relative rounded-pill px-3 month-btn" data-month="4" onclick="LoadPartialshopevent('4')">Apr</button>
                    <button class="btn btn-outline-primary position-relative rounded-pill px-3 month-btn" data-month="5" onclick="LoadPartialshopevent('5')">May</button>
                    <button class="btn btn-outline-primary position-relative rounded-pill px-3 month-btn" data-month="6" onclick="LoadPartialshopevent('6')">Jun</button>
                    <button class="btn btn-outline-primary position-relative rounded-pill px-3 month-btn" data-month="7" onclick="LoadPartialshopevent('7')">Jul</button>
                    <button class="btn btn-outline-primary position-relative rounded-pill px-3 month-btn" data-month="8" onclick="LoadPartialshopevent('8')">Aug</button>
                    <button class="btn btn-outline-primary position-relative rounded-pill px-3 month-btn" data-month="9" onclick="LoadPartialshopevent('9')">Sep</button>
                    <button class="btn btn-outline-primary position-relative rounded-pill px-3 month-btn" data-month="10" onclick="LoadPartialshopevent('10')">Oct</button>
                    <button class="btn btn-outline-primary position-relative rounded-pill px-3 month-btn" data-month="11" onclick="LoadPartialshopevent('11')">Nov</button>
                    <button class="btn btn-outline-primary position-relative rounded-pill px-3 month-btn" data-month="12" onclick="LoadPartialshopevent('12')">Dec</button>
                </div>


            </div>
        </div>

        <div class="card-body">
            <div id="calendar"></div>
        </div>
    </div>
</div>


<div class="modal fade" id="modalEventInfo" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalEventTitle">ข้อมูลกิจกรรม</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong>วันที่:</strong> <span id="modalEventDate"></span></p>
                <p><strong>สถานที่:</strong> <span id="modalEventLocation"></span></p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">ปิด</button>
            </div>
        </div>
    </div>
</div>


