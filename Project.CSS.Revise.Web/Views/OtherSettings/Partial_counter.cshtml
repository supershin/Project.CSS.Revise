
<!-- Font Awesome (icons) -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    :root {
        --brand-green: #c9f0cf;
        --brand-green-text: #1f7a3e;
        --brand-purple: #ecd9ff;
        --brand-purple-text: #6f3acb;
        --card-border: #e7ecef;
        --chip-red: #ffdfdf;
        --chip-red-text: #b44b4b;
        --chip-amber: #ffecc7;
        --chip-amber-text: #8a5a00;
        --btn-teal: #167a7a;
        --btn-teal-hover: #0f5b5b;
    }

    /* Section title pill */
    .section-pill {
        display: inline-block;
        padding: .55rem 1rem;
        border-radius: 12px;
        font-weight: 700;
        font-size: 1.05rem;
    }

    .pill-green {
        background: var(--brand-green);
        color: var(--brand-green-text);
    }

    .pill-purple {
        background: var(--brand-purple);
        color: var(--brand-purple-text);
    }

    /* Cards */
    .proj-card {
        border: 1px solid var(--card-border);
        border-radius: 14px;
        padding: 1.25rem 1.25rem 1rem;
        background: #fff;
        transition: box-shadow .15s ease, transform .05s ease;
        height: 100%;
    }

    .proj-card:hover {
        box-shadow: 0 8px 20px rgba(0,0,0,.06);
        transform: translateY(-1px);
    }

    .site-name {
        font-weight: 800;
        font-size: 1.1rem;
        margin: 0;
    }

    .subtype {
        font-size: .85rem;
        padding: .25rem .55rem;
        border-radius: 8px;
        display: inline-block;
        background: #f2f7f5;
        color: #5b6b66;
        border: 1px dashed #dbe6e1;
    }

    .chip {
        display: inline-block;
        padding: .25rem .55rem;
        font-size: .8rem;
        border-radius: 999px;
        font-weight: 600;
        vertical-align: middle;
    }

    .chip-red {
        background: var(--chip-red);
        color: var(--chip-red-text);
    }

    .chip-amber {
        background: var(--chip-amber);
        color: var(--chip-amber-text);
    }

    /* Right rounded badge */
    .count-badge {
        background: #eaf9ee;
        color: #2f9e44;
        border-radius: 999px;
        padding: .35rem .7rem;
        font-size: .8rem;
        font-weight: 700;
        white-space: nowrap;
    }

    /* Bottom actions */
    .action-btn {
        background: var(--btn-teal);
        color: #fff;
        border: none;
        border-radius: 10px;
        padding: .5rem .75rem;
        font-weight: 600;
    }

    .action-btn:hover {
        background: var(--btn-teal-hover);
        color: #fff;
    }

    .icon-btn {
        background: #e7f4f4;
        color: #0f5b5b;
        border: none;
        border-radius: 10px;
        padding: .5rem .7rem;
        font-weight: 700;
    }

    .icon-btn i {
        margin-right: .35rem;
    }

    .btn-row {
        gap: .5rem;
    }


</style>
<div class="container py-4 py-lg-5">
    <!-- ===================== Bank Pre-Approve ===================== -->
    <div class="mb-3">
        <span class="section-pill pill-green">Bank Pre-Approve (สินเชื่อ)</span>
    </div>
    <div class="row g-4" id="bank_cards">
        <!-- dynamic -->
   </div>

    <!-- ===================== Inspect ===================== -->
    <div class="mt-5 mb-3">
        <span class="section-pill pill-purple">Inspect (รับมอบห้อง)</span>
    </div>
    <div class="row g-4" id="inspect_cards">
        <!-- dynamic -->
    </div>

</div>

<!-- Modal -->
<div class="modal fade" id="counterModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content border-0 shadow">
            <div class="modal-header align-items-start">
                <div class="d-flex align-items-center gap-3">
                    <!-- Logo mock -->
                    <div class="rounded bg-light d-flex align-items-center justify-content-center"
                         style="width:40px;height:40px; border:1px solid #eee;">
                        <i class="fa-brands fa-font-awesome fa-bounce fa-lg" style="color: #2b8bd4;"></i>
                    </div>
                    <div>
                        <h5 class="modal-title mb-1 fw-bold" id="counterModalTitle">New Counter</h5>
                        <div class="text-muted small" id="counterModalSubtitle">เพิ่มข้อมูล Bank Pre-Approve (สินเชื่อ) หรือ Inspect (รับมอบห้อง)</div>
                    </div>
                </div>
                <button type="button" class="btn-close ms-auto" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Body -->
            <div class="modal-body pt-3 pb-0" style="max-height:70vh;">
                <ul class="simple-wrapper nav nav-tabs" id="modal-add-counter" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active txt-primary" id="details-tab" data-bs-toggle="tab" data-bs-target="#details-pane" type="button" role="tab" aria-controls="details-pane" aria-selected="true">
                            <i class="icofont icofont-list"></i> Detail
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link txt-primary" id="staffs-tab" data-bs-toggle="tab" data-bs-target="#staffs-pane" type="button" role="tab" aria-controls="staffs-pane" aria-selected="false">
                            <i class="icofont icofont-users-alt-1"></i> Staff
                        </button>
                    </li>
                </ul>

                <!-- Tab Content -->
                <div class="tab-content mt-3" id="modal-add-counter-content">

                    <!-- TAB 1 -->
                    <div class="tab-pane fade show active" id="details-pane" role="tabpanel" aria-labelledby="details-tab">
                        <!-- 🟢 Content for Detail -->
                        <div class="p-3">
                            <h6 class="sub-title">
                                Counter <span class="text-danger">*</span>
                            </h6>
                            <label class="d-block" for="chk-md-add-counter-bank"></label>
                            <input class="checkbox_animated" id="chk-md-add-counter-bank" type="checkbox" checked=""> <span class="badge badge-success"><i class="fa fa-bank"></i> Bank Pre-Approve (สินเชื่อ)</span>
                            <label class="d-block" for="chk-md-add-counter-inspect"></label>
                            <input class="checkbox_animated" id="chk-md-add-counter-inspect" type="checkbox"> <span class="badge badge-warning"><i class="fa fa-search"></i> Event Inspect (ตรวจรับมอบห้อง)</span>
                        </div>
                        <!-- Inside details-pane -->
                        <div class="p-3">
                            <h6 class="sub-title">
                                Project (mapping) <span class="text-danger">*</span>
                            </h6>
                            <select id="ddl_project_counter_mapping" multiple></select>
                            <div id="project_mapping_loading" class="form-text text-muted d-none">Loading…</div>
                        </div>
                        <div class="row p-3">
                            <!-- จำนวนเคาน์เตอร์ -->
                            <div class="col-md-6">
                                <h6 class="sub-title">
                                    จำนวนเคาน์เตอร์ <span class="text-danger">*</span>
                                </h6>
                                <input type="number" class="form-control" id="counterQty" value="20" placeholder="ใส่จำนวน…">
                            </div>

                            <!-- อัตราดอกเบี้ยพิเศษ -->
                            <div class="col-md-6">
                                <h6 class="sub-title">
                                    อัตราดอกเบี้ยพิเศษ <span class="text-danger">*</span>
                                </h6>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="specialRateFile" value="20" placeholder="ใส่จำนวน…">
                                </div>
                            </div>
                        </div>

                    </div>

                    <!-- TAB 2 -->
                    <div class="tab-pane fade" id="staffs-pane" role="tabpanel" aria-labelledby="staffs-tab">
                        <!-- 🟢 Content for Staff -->
                        <div class="card shadow-sm border-0 rounded-3 mb-3">
                            <div class="card-body py-3">
                                <div class="d-flex align-items-center justify-content-between gap-3">
                                    <!-- Left: Logo + Bank Name -->
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="bank-logo">
                                            <img src="../image/ThaiBankicon/BBL.png"
                                                 class="rounded-circle border p-1 img-50"
                                                 alt="Bangkok Bank Logo">
                                        </div>
                                        <div class="bank-info">
                                            <span class="fw-bold text-dark">ธนาคารกรุงเทพ จำกัด (มหาชน)</span>
                                        </div>
                                    </div>
                                    <!-- Right: Checkbox + Input -->
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="form-check me-2">
                                            <input class="form-check-input" type="checkbox" id="bblCheck">
                                        </div>
                                        <input type="number" class="form-control form-control-sm w-75"
                                               id="bblvalue" value="5" placeholder="จำนวน…">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card shadow-sm border-0 rounded-3 mb-3">
                            <div class="card-body py-3">
                                <div class="d-flex align-items-center justify-content-between gap-3">
                                    <!-- Left: Logo + Bank Name -->
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="bank-logo">
                                            <img src="../image/ThaiBankicon/KBANK.png"
                                                 class="rounded-circle border p-1 img-50"
                                                 alt="Kasikorn Bank Logo">
                                        </div>
                                        <div class="bank-info">
                                            <span class="fw-bold text-dark">ธนาคารกสิกรไทย จำกัด (มหาชน)</span>
                                        </div>
                                    </div>
                                    <!-- Right: Checkbox + Input -->
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="form-check me-2">
                                            <input class="form-check-input" type="checkbox" id="kbankCheck">
                                        </div>
                                        <input type="number" class="form-control form-control-sm w-75"
                                               id="kbankvalue" value="0" placeholder="จำนวน…">
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>

                </div>
            </div>

            <!-- Footer -->
            <div class="modal-footer bg-light-subtle">
                <button class="btn btn-success px-4">Save</button>
                <button class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>


