<style>
    :root {
        --brand-green: #c9f0cf;
        --brand-green-text: #1f7a3e;
        --brand-purple: #ecd9ff;
        --brand-purple-text: #6f3acb;
        --card-border: #e7ecef;
        --chip-red: #ffdfdf;
        --chip-red-text: #b44b4b;
        --chip-amber: #ffecc7;
        --chip-amber-text: #8a5a00;
        --btn-teal: #167a7a;
        --btn-teal-hover: #0f5b5b;
    }

    /* Section title pill */
    .section-pill {
        display: inline-block;
        padding: .55rem 1rem;
        border-radius: 12px;
        font-weight: 700;
        font-size: 1.05rem;
    }

    .pill-green {
        background: var(--brand-green);
        color: var(--brand-green-text);
    }

    .pill-purple {
        background: var(--brand-purple);
        color: var(--brand-purple-text);
    }

    /* Cards */
    .proj-card {
        border: 1px solid var(--card-border);
        border-radius: 14px;
        padding: 1.25rem 1.25rem 1rem;
        background: #fff;
        transition: box-shadow .15s ease, transform .05s ease;
        height: 100%;
    }

    .proj-card:hover {
        box-shadow: 0 8px 20px rgba(0,0,0,.06);
        transform: translateY(-1px);
    }

    .site-name {
        font-weight: 800;
        font-size: 1.1rem;
        margin: 0;
    }

    .subtype {
        font-size: .85rem;
        padding: .25rem .55rem;
        border-radius: 8px;
        display: inline-block;
        background: #f2f7f5;
        color: #5b6b66;
        border: 1px dashed #dbe6e1;
    }

    .chip {
        display: inline-block;
        padding: .25rem .55rem;
        font-size: .8rem;
        border-radius: 999px;
        font-weight: 600;
        vertical-align: middle;
    }

    .chip-red {
        background: var(--chip-red);
        color: var(--chip-red-text);
    }

    .chip-amber {
        background: var(--chip-amber);
        color: var(--chip-amber-text);
    }

    /* Right rounded badge */
    .count-badge {
        background: #eaf9ee;
        color: #2f9e44;
        border-radius: 999px;
        padding: .35rem .7rem;
        font-size: .8rem;
        font-weight: 700;
        white-space: nowrap;
    }

    /* Bottom actions */
    .action-btn {
        background: var(--btn-teal);
        color: #fff;
        border: none;
        border-radius: 10px;
        padding: .5rem .75rem;
        font-weight: 600;
    }

    .action-btn:hover {
        background: var(--btn-teal-hover);
        color: #fff;
    }

    .icon-btn {
        background: #e7f4f4;
        color: #0f5b5b;
        border: none;
        border-radius: 10px;
        padding: .5rem .7rem;
        font-weight: 700;
    }

    .icon-btn i {
        margin-right: .35rem;
    }

    .btn-row {
        gap: .5rem;
    }
</style>
