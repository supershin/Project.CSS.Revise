@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
@using Project.CSS.Revise.Web.Models.Pages.ProjectAndTargetRolling
<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h4>Project target & rolling Tables</h4>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="index.html">
                            <svg class="stroke-icon">
                                <use xlink:href="@Url.Content("~/assets/svg/icon-sprite.svg#stroke-home")"></use>
                            </svg>
                        </a>
                    </li>
                    <li class="breadcrumb-item">Setting</li>
                    <li class="breadcrumb-item active">Project target & rolling </li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="col-12 box-col-12">
        <div class="md-sidebar">
            <a class="btn btn-primary email-aside-toggle md-sidebar-toggle">Filters</a>
            <div class="md-sidebar-aside job-sidebar">
                <div class="default-according style-1 faq-accordion job-accordion">
                    <div class="accordion" id="accordionExample">
                        <div class="card">
                            <div class="card-header" id="headingOne">
                                <h2 class="mb-0">
                                    <button class="btn btn-link btn-block text-start" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne"><h4 class="m-0">Filters</h4></button>
                                </h2>
                            </div>
                            <div class="collapse show" id="collapseOne" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                                <div class="card-body filter-cards-view animate-chk">
                                    <div class="row">
                                        <div class="job-filter mb-3 col-4">
                                            <label for="ddl_year" class="form-label fw-bold">Year</label>
                                            <select id="ddl_year" class="form-control multi-select" multiple></select>
                                        </div>
                                        <div class="job-filter mb-3 col-4">
                                            <label for="ddl_quarter" class="form-label fw-bold">Quarter</label>
                                            <select id="ddl_quarter" class="form-control multi-select" multiple>
                                                <option value="Q1">Q1</option>
                                                <option value="Q2">Q2</option>
                                                <option value="Q3">Q3</option>
                                                <option value="Q4">Q4</option>
                                            </select>
                                        </div>
                                        <div class="job-filter mb-3 col-4">
                                            <label for="ddl_month" class="form-label fw-bold">Month</label>
                                            <select id="ddl_month" class="form-control" multiple>
                                                <option value="1">Jan</option>
                                                <option value="2">Feb</option>
                                                <option value="3">Mar</option>
                                                <option value="4">Apr</option>
                                                <option value="5">May</option>
                                                <option value="6">Jun</option>
                                                <option value="7">Jul</option>
                                                <option value="8">Aug</option>
                                                <option value="9">Sep</option>
                                                <option value="10">Oct</option>
                                                <option value="11">Nov</option>
                                                <option value="12">Dec</option>
                                            </select>
                                        </div>
                                        <div class="job-filter mb-3 col-4">
                                            <label for="ddl_plantype" class="form-label fw-bold">Plan Type</label>
                                            <select id="ddl_plantype" class="form-control" multiple>
                                                @if (ViewBag.ListPlanType != null)
                                                {
                                                    foreach (var item in ViewBag.ListPlanType)
                                                    {
                                                        <option value="@item.ValueInt">@item.Text</option>
                                                    }
                                                }
                                            </select>
                                        </div>

                                        <div class="job-filter mb-3 col-4">
                                            <label for="ddl_bug" class="form-label fw-bold">BUG</label>
                                            <select id="ddl_bug" class="form-control" multiple>
                                                @if (ViewBag.listBu != null)
                                                {
                                                    foreach (var item in ViewBag.listBu)
                                                    {
                                                        <option value="@item.ID">@item.Name</option>
                                                    }
                                                }
                                            </select>
                                        </div>

                                        <div class="job-filter mb-3 col-4">
                                            <label for="ddl_project" class="form-label fw-bold">Project</label>
                                            <select id="ddl_project" class="form-control" multiple>

                                            </select>
                                        </div>
                                    </div>

                                </div>
                                <div class="card-footer d-flex justify-content-end gap-2">
                                    <button class="btn btn-secondary" type="button" id="import_data_project_target_rolling" data-bs-toggle="modal" data-bs-target="#modalImportTargetRolling">
                                        <i class="fa fa-upload me-1"></i> Import
                                    </button>
                                    <button class="btn btn-success" type="button" onclick="exportExcelProjectAndTargetRolling()">
                                        <i class="fa fa-file-excel-o me-1"></i> Export
                                    </button>
                                    <button class="btn btn-primary" type="button">
                                        <i class="fa fa-search me-1"></i> Search
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="card">
        <div class="card-header card-no-border total-revenue">
            <h4 class="m-0">Summery</h4>
        </div>
        <div class="card-body pt-0">
            <div id="cardContainer" class="d-flex overflow-auto gap-3" style="white-space: nowrap; scroll-behavior: smooth;">
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="flex-grow-1">
                    <!-- Any title or filters here -->
                </div>
                <div>
                    <button id="btnEdit" class="btn btn-primary btn-sm">
                        <i class="mdi mdi-pencil"></i> Edit
                    </button>
                    <button id="btnCancelEdit" class="btn btn-outline-secondary btn-sm d-none">
                        Cancel
                    </button>
                </div>
            </div>
            <div id="rolling-plan-container" class="table-wrapper"><!-- table injected here --></div>
        </div>
    </div>
</div>


<!-- Modal import data -->
<div class="modal fade" id="modalImportTargetRolling" tabindex="-1" aria-labelledby="modalImportLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="form-import-project-target-rolling" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalImportLabel"><i class="fa fa-file-excel-o me-1"></i> Import Excel</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label for="excelFile" class="form-label">Choose Excel File (.xlsx)</label>
                        <input class="form-control" type="file" name="file" id="excelFile" accept=".xlsx" required />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-upload me-1"></i> Upload & Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/min/dropzone.min.js"></script>
    <script src="~/js/Pages/ProjectTargetRolling/index.js?ver=@DateTime.Now.Ticks.ToString()"></script>
    <link rel="stylesheet" type="text/css" href="~/css/projectandtargetrolling.css?ver=@DateTime.Now.Ticks.ToString()">
    <!-- SweetAlert2 (optional for feedback) -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}


