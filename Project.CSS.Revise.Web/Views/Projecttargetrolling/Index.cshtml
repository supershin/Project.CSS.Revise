@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
@using Project.CSS.Revise.Web.Models.Pages.ProjectAndTargetRolling
<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h4>Target & rolling</h4>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="index.html">
                            <svg class="stroke-icon">
                                <use xlink:href="@Url.Content("~/assets/svg/icon-sprite.svg#stroke-home")"></use>
                            </svg>
                        </a>
                    </li>
                    <li class="breadcrumb-item">Setting</li>
                    <li class="breadcrumb-item active">Target & rolling</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="card filter-card">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Filters</h5>
            <button class="btn btn-sm btn-outline-secondary d-flex align-items-center gap-1"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#fltCollapse"
                    aria-expanded="true"
                    aria-controls="fltCollapse">
                <i class="fa fa-chevron-up"></i>
            </button>
        </div>

        <div id="fltCollapse" class="collapse show">
            <div class="card-body">
                <div class="row g-3 filter-grid">
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <label for="ddl_year" class="form-label fw-bold">Year</label>
                        <select id="ddl_year" class="form-control multi-select" multiple></select>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <label for="ddl_quarter" class="form-label fw-bold">Quarter</label>
                        <select id="ddl_quarter" class="form-control multi-select" multiple>
                            <option value="Q1">Q1</option>
                            <option value="Q2">Q2</option>
                            <option value="Q3">Q3</option>
                            <option value="Q4">Q4</option>
                        </select>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <label for="ddl_month" class="form-label fw-bold">Month</label>
                        <select id="ddl_month" class="form-control" multiple>
                            <option value="1">Jan</option>
                            <option value="2">Feb</option>
                            <option value="3">Mar</option>
                            <option value="4">Apr</option>
                            <option value="5">May</option>
                            <option value="6">Jun</option>
                            <option value="7">Jul</option>
                            <option value="8">Aug</option>
                            <option value="9">Sep</option>
                            <option value="10">Oct</option>
                            <option value="11">Nov</option>
                            <option value="12">Dec</option>
                        </select>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <label for="ddl_plantype" class="form-label fw-bold">Plan Type</label>
                        <select id="ddl_plantype" class="form-control" multiple>
                            @if (ViewBag.ListPlanType != null)
                            {
                                foreach (var item in ViewBag.ListPlanType)
                                {
                                    <option value="@item.ValueInt">@item.Text</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <label for="ddl_bug" class="form-label fw-bold">BUG</label>
                        <select id="ddl_bug" class="form-control" multiple>
                            @if (ViewBag.listBu != null)
                            {
                                foreach (var item in ViewBag.listBu)
                                {
                                    <option value="@item.ID">@item.Name</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <label for="ddl_project_status" class="form-label fw-bold">Project Status</label>
                        <select id="ddl_project_status" class="form-control" multiple>
                            @if (ViewBag.ListProjectStatus != null)
                            {
                                foreach (var item in ViewBag.ListProjectStatus)
                                {
                                    <option value="@item.ValueInt">@item.Text</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <label for="ddl_project_partner" class="form-label fw-bold">Project Partner</label>
                        <select id="ddl_project_partner" class="form-control" style="height:50px;font-size:1rem;padding:10px 12px;">
                            @* <option value="" selected data-placeholder="true">ทั้งหมด</option> *@
                            @if (ViewBag.ListProjectPartner != null)
                            {
                                foreach (var item in ViewBag.ListProjectPartner)
                                {
                                    <option value="@item.ValueInt">@item.Text</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <label for="ddl_project" class="form-label fw-bold">Project</label>
                        <select id="ddl_project" class="form-control" multiple></select>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <label for="ddl_showtype" class="form-label fw-bold">Show Type</label>
                        <select id="ddl_showtype" class="form-control">
                            <option value="GetListTargetRollingPlanCuttoltal" selected>New</option>
                            <option value="GetListTargetRollingPlan">Old</option>
                        </select>
                    </div>

                </div>
            </div>

            <div class="card-footer d-flex justify-content-end align-items-center gap-2 flex-nowrap footer-actions p-2">
                @if (ViewBag.Permission != null && ViewBag.Permission.Add)
                {
                    <button class="btn btn-secondary btn-sm"
                            type="button"
                            id="import_data_project_target_rolling"
                            data-bs-toggle="modal"
                            data-bs-target="#modalImportTargetRolling">
                        <i class="fa fa-upload me-1"></i> Import
                    </button>
                }

                @if (ViewBag.Permission != null && ViewBag.Permission.Download)
                {
                    <button class="btn btn-success btn-sm"
                            type="button"
                            onclick="exportExcelProjectAndTargetRolling()">
                        <i class="fa fa-file-excel-o me-1"></i> Export
                    </button>
                }

                <button id="btnFilterCancel" type="button" class="btn btn-outline-secondary btn-sm" onclick="ClearFilter()">
                    <i class="fa fa-undo me-1"></i> Cancel
                </button>
                <button id="btnSearch" class="btn btn-primary btn-sm" type="button">
                  <i class="fa fa-search me-1"></i> Search
                </button>

            </div>
        </div>
    </div>
</div>


<div class="container-fluid">
    <div class="card summary-card mt-3">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Summary</h5>
            <button class="btn btn-sm btn-outline-secondary d-flex align-items-center gap-1"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#collapseSummary"
                    aria-expanded="true"
                    aria-controls="collapseSummary">
                <i class="fa fa-chevron-up"></i>
            </button>
        </div>

        <div id="collapseSummary" class="collapse show">
            <div id="summaryCardBody" class="card-body pt-2">
                <div id="cardSummary" class="summary-grid">
                    <!-- your summary grid items load here -->
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="flex-grow-1">
                    <!-- Any title or filters here -->
                </div>
                <div>
                    @if (ViewBag.Permission != null && ViewBag.Permission.Update)
                    {
                        <button id="btnEdit" class="btn btn-primary btn-sm">
                            <i class="mdi mdi-pencil"></i> Edit
                        </button>

                        <button id="btnSaveEdit" class="btn btn-success btn-sm d-none" disabled>
                            <i class="fa fa-save me-1"></i> Save
                        </button>
                    }

                    <button id="btnCancelEdit" class="btn btn-outline-secondary btn-sm d-none">
                        Cancel
                    </button>
                </div>
            </div>
            <div id="rolling-plan-container" class="table-wrapper"><!-- table injected here --></div>
        </div>
    </div>
</div>


<!-- Modal import data -->
<div class="modal fade" id="modalImportTargetRolling" tabindex="-1" aria-labelledby="modalImportLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="form-import-project-target-rolling" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalImportLabel"><i class="fa fa-file-excel-o me-1"></i> Import Excel</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label for="excelFile" class="form-label">Choose Excel File (.xlsx)</label>
                        <input class="form-control" type="file" name="file" id="excelFile" accept=".xlsx" required />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-upload me-1"></i> Upload & Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/min/dropzone.min.js"></script>
    <script src="~/js/Pages/ProjectTargetRolling/index.js?ver=@DateTime.Now.Ticks.ToString()"></script>
    <link rel="stylesheet" type="text/css" href="~/css/projectandtargetrolling.css?ver=@DateTime.Now.Ticks.ToString()">
    <!-- SweetAlert2 (optional for feedback) -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}


