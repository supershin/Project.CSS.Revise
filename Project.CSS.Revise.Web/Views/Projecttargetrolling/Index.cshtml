@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/min/dropzone.min.js"></script>
    <script src="~/js/Pages/ProjectTargetRolling/index.js?ver=@DateTime.Now.Ticks.ToString()"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            new Choices('#ddl_project', {
                removeItemButton: true,
                placeholderValue: 'เลือกโครงการได้มากกว่า 1',
                searchEnabled: true,
                itemSelectText: '',
                shouldSort: false
            });
        });

        Dropzone.autoDiscover = false;

        const myDropzone = new Dropzone("#myDropzone", {
            url: "/upload",   // <-- พ่อใหญ่เปลี่ยน URL ตรงนี้
            maxFiles: 1,
            maxFilesize: 5,  // MB
            acceptedFiles: ".xls,.xlsx,.csv",
            dictDefaultMessage: "📎 Drag & Drop file here or click to upload",
            init: function() {
                this.on("success", function(file, response) {
                    console.log("Uploaded successfully", response);
                });
            }
        });

        document.addEventListener('DOMContentLoaded', function () {
            const table = document.getElementById('highlightTable');

            table.addEventListener('mouseover', function (e) {
                const cell = e.target.closest('td');
                if (!cell || !table.contains(cell)) return;

                const row = cell.parentNode;
                const allRows = Array.from(table.querySelectorAll('tbody tr'));

                // หา index ของ cell ที่ hover
                const cellIndex = Array.from(cell.parentNode.children).indexOf(cell);

                // ล้าง highlight เดิม
                table.querySelectorAll('td').forEach(el => {
                    el.classList.remove('hover', 'active-cell');
                });

                // Highlight ทั้งแถว (เฉพาะ td)
                row.querySelectorAll('td').forEach(td => td.classList.add('hover'));

                // Highlight ทั้งคอลัมน์ (เฉพาะ td)
                allRows.forEach(tr => {
                    const tds = tr.querySelectorAll('td');
                    if (tds[cellIndex]) {
                        tds[cellIndex].classList.add('hover');
                    }
                });

                // Highlight cell ปัจจุบัน
                cell.classList.add('active-cell');
            });

            table.addEventListener('mouseleave', function () {
                table.querySelectorAll('td').forEach(el => {
                    el.classList.remove('hover', 'active-cell');
                });
            });
        });
    </script>
