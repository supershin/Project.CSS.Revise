@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
    var _projects = ViewBag.listDDlAllProject as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
}
<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h4>Project & unit floor plan</h4>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="index.html">
                            <svg class="stroke-icon">
                                <use xlink:href="@Url.Content("~/assets/svg/icon-sprite.svg#stroke-home")"></use>
                            </svg>
                        </a>
                    </li>
                    <li class="breadcrumb-item">Setting</li>
                    <li class="breadcrumb-item active">Project & unit floor plan </li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mb-3">
    <div class="row">
        <div class="col-12">
            <div class="card mb-3">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h6 class="mb-0">Filter</h6>

                    <!-- Show on ALL sizes; toggles collapse -->
                    <button type="button"
                            id="btnToggleFilters"
                            class="btn btn-sm btn-outline-secondary d-inline-flex align-items-center gap-1"
                            data-bs-toggle="collapse"
                            data-bs-target="#filterBody"
                            aria-expanded="true"
                            aria-controls="filterBody">
                        ตัวกรอง
                        <i class="bi bi-chevron-up" id="filterChevron"></i>
                    </button>
                </div>

                <!-- 👇 Use Bootstrap collapse (visible by default with .show) -->
                <div id="filterBody" class="card-body collapse show">
                    <form id="filterForm">
                        <div class="row g-3 align-items-end">
                            <!-- Project -->
                            <div class="col-12 col-md-6 col-lg-3">
                                <label class="form-label fw-semibold" for="projectSelect">โครงการ</label>
                                <select id="projectSelect" class="form-select styled-select">
                                    @foreach (var p in _projects)
                                    {
                                        var val = (p.ValueString ?? p.ValueInt ?? p.Value ?? p.ID ?? "").ToString();
                                        var text = (p.Text ?? p.ProjectName ?? p.Name ?? "").ToString();
                                        <option value="@val">@text</option>
                                    }
                                </select>
                            </div>

                            <!-- Unit Type -->
                            <div class="col-12 col-md-6 col-lg-6">
                                <label class="form-label fw-semibold" for="ddl_unittype">Unit Type</label>
                                <select id="ddl_unittype" class="form-select" multiple>
                                    <option value="" selected disabled>— เลือก Unit Type —</option>
                                </select>
                            </div>

                            <div class="col-12 col-md-6 col-lg-3">
                                <button class="btn btn-success shadow-sm px-4" id="BtnSearch">
                                    <i class="icofont icofont-search"></i> Search
                                </button>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-12">
            <div class="row">
                <div class="col-12 col-sm-6 col-xl-6">
                    <div class="card shadow-sm" id="card_project_floor_plan">
                        <div class="card-header d-flex align-items-center justify-content-between">
                            <div>
                                <h6 class="mb-0">Floor plan lists</h6>
                                <small class="text-muted" id="count_Floor_plan_lists">
                                    ทั้งหมด 4
                                </small>
                            </div>
                            <div class="btn-group">
                                <button class="btn btn-sm btn-primary" id="btnFloorplanAdd">
                                    <i class="bi bi-plus-lg"></i> Add
                                </button>
                            </div>
                        </div>
                        <div class="card-body pt-2">
                            <!-- ✅ Check All -->
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" id="chkAllFloorplan" style="border: 2px solid grey; accent-color: #0d6efd;" />
                                <label class="form-check-label fw-semibold" for="chkAllFloorplan">
                                    เลือกทั้งหมด
                                </label>
                            </div>

                            <div class="vertical-scroll scroll-demo scroll-b-none">
                                <div class="list-group">
      
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-xl-6">
                    <div class="card" id="card_unit">
                        <div class="card-header d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-2">
                            <div class="d-flex align-items-center gap-2">
                                <h4 class="mb-0">Floor plan lists</h4>
                                <!-- ✅ ตัวนับทั้งหมด (JS จะอัปเดตข้อความให้เอง) -->
                                <small class="text-muted" id="count_unit_total">ทั้งหมด 0</small>
                            </div>
                            <input type="text" class="form-control w-100 w-md-50 shadow-sm" id="searchUnitInput" placeholder="🔍 Search unit..." />
                        </div>
                        <div class="card-body">
                            <div class="vertical-scroll scroll-demo">
                                <!-- ✅ แถว Check all (JS จะ bind อัตโนมัติ) -->
                                <div id="unitCheckAllRow" class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="chkAllUnit" style="border:2px solid grey; accent-color:#0d6efd;" />
                                    <label class="form-check-label fw-semibold" for="chkAllUnit">เลือกทั้งหมด</label>
                                </div>

                                <!-- ✅ รายการยูนิต (JS จะ render แทนที่ด้านใน) -->
                                <div class="list-group">
                                    <!-- populated by JS -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    <link rel="stylesheet" type="text/css" href="~/css/projectandunitfloorplan.css?ver=@DateTime.Now.Ticks.ToString()">
    <script src="~/js/Pages/Projectandunitfloorplan/Projectandunitfloorplan.js?ver=@DateTime.Now.Ticks.ToString()"></script>
}
